@model IEnumerable<product_store.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
}
<div class="font-bold">Total Products : @ViewBag.Total</div>
<p  class="flex justify-content-end p-3 font-bold bg-slate-800 text-white w-fit rounded-2 m-4">
    <a asp-action="Create">Create New</a>
</p>

<div class="flex justify-content-center text-3xl font-bold">
    All Products
</div>
<div class="flex gap-3">
    @foreach (var item in Model)
    {
       <partial name="ProductCardView" model="item" />
    }
</div>
