@model Domain.ModelLayer.ProductModel;

@{
    ViewData["Title"] = "Delete";
}
<div class="flex justify-content-center">
    <h3 class="text-red-400 p-2 font-bold">Are you sure you want to delete this?</h3>
</div>
<div>
    <hr />

    <div class="p-2 shadow">
        <div>
            <div class="p-2 font-bold border-b-2">
                @Model.Name
            </div>
            <div class="p-2 w-fit">
                <div class="text-1xl">
                    ₹@Model.Price
                </div>
                <div class="flex gap-2">
                    <div class="bg-slate-800/80 p-2 rounded-2 my-1 text-white">
                        @Model.Category
                    </div>
                    <div class="bg-slate-500/50 p-2 rounded-2 my-1">
                        @Model.Brand
                    </div>
                    <div class="bg-slate-500/20 p-2 rounded-2 my-1">
                        QTY : @Model.Qty
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
